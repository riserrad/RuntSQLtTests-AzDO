{
    "manifestVersion": 1,
    "id": "runtsqltunittests",
    "name": "Run tSQLt Unit Tests",
    "version": "0.2.5",
    "publisher": "RicardoSerradasMSFT",
    "description": "Build task to run tSQLt Unit Tests and publist its results and code coverage.",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "categories": [
        "Azure Pipelines"
    ],
    "content": {
        "details": {
            "path": "overview.md",
            "addressable": true
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/ricardoserradas/RuntSQLtTests-AzDO"
    },
    "icons": {
        "default": "images/extension-icon-128x128.png"        
    },
    "files": [
        {
            "path": "buildAndReleaseTask"
        },
        {
            "path": "images",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "runtsqltunittests",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildAndReleaseTask"
            }
        }
    ],
    "galleryFlags": [
        "Public",
        "Preview"
    ]
}